<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_userImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_medium"
            android:clickable="true"
            android:padding="@dimen/padding_medium"
            app:border_color="#FF000000"
            app:border_width="1dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_privacy"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:src="@drawable/public_icon" />

            <TextView
                android:id="@+id/tv_feedage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/clock"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:padding="@dimen/padding_small"
                android:text="3 min ago"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_userImage"
            android:clickable="true"
            android:padding="@dimen/padding_medium"
            android:text="Project Expresso"
            android:textColor="@android:color/black"
            android:textSize="15sp" />


        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_username"
            android:clickable="true"
            android:padding="@dimen/padding_large"
            android:visibility="gone"
            android:src="@drawable/user" />

    </RelativeLayout>
</LinearLayout><!-- From: file:/C:/GitHub/Project-Expresso-master/app/src/main/res/layout/user_feed_header.xml -->
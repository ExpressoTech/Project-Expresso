<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_large"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_userImage"
        app:border_color="#FF000000"
        app:border_width="1dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin_medium"
        android:padding="@dimen/padding_medium"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_toRightOf="@+id/iv_userImage"
        android:layout_toLeftOf="@+id/iv_reply"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_marginLeft="@dimen/margin_medium"
            android:paddingLeft="@dimen/padding_medium"
            android:singleLine="true"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="Akshay"
            android:textSize="@dimen/text_size_medium"/>

        <TextView
            android:id="@+id/tv_usercomment"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_marginLeft="@dimen/margin_medium"
            android:padding="@dimen/padding_medium"
            android:textColor="@android:color/black"
            android:text="Great food"
            android:textSize="@dimen/text_size_large"/>

        </LinearLayout>


    <ImageView
        android:id="@+id/iv_reply"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/reply"/>

</RelativeLayout><!-- From: file:/C:/GitHub/Project-Expresso-master/app/src/main/res/layout/feed_comment_layout_row.xml -->
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@color/accent_material_light"
    android:padding="@dimen/padding_large">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_userImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_launcher"
        app:border_color="#FF000000"
        app:border_width="1dp" />


    <TextView
        android:id="@+id/tv_usercomment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_userImage"
        android:padding="@dimen/padding_medium"
        android:text="Project Expresso"
        android:maxLines="2"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/tv_feedage"
        android:layout_toStartOf="@+id/tv_feedage" />


    <TextView
        android:id="@+id/tv_commentage"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/clock"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:padding="@dimen/padding_medium"
        android:text="3 min ago"
        android:visibility="gone"
        android:textColor="@android:color/darker_gray"
        />


</RelativeLayout>